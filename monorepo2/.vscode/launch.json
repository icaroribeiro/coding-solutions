	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Vi Tests",
			"autoAttachChildProcesses": true,
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"program": "${workspaceRoot}/packages/**/node_modules/vitest/vitest.mjs",
			"args": ["run", "${relativeFile}"],
			"smartStep": true,
			"console": "integratedTerminal"
		}
	]
}
