{
    "$schema": "https://json.schemastore.org/tsconfig",
    "_version": "20.0.0",
    "compilerOptions": {
        // "baseUrl": "./packages",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "incremental": true,
        "lib": [
            "es2023"
